<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vicky.myapp.Activitytongyao"
    android:background="@drawable/gushibjt">

    <android.support.v4.view.ViewPager
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/viewpager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        >

    </android.support.v4.view.ViewPager>

    <ImageButton
        android:id="@+id/back_button"
        android:background="#00000000"
        android:src="@drawable/tongyao_fan"
        android:scaleType="centerInside"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ImageButton
        android:id="@+id/ib_left"
        android:background="#00000000"
        android:src="@drawable/tongyao_zuo"
        android:scaleType="centerInside"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/viewpager"
        android:layout_alignRight="@+id/back_button"
        android:layout_alignEnd="@+id/back_button" />

    <ImageButton
        android:id="@+id/ib_right"
        android:background="#00000000"
        android:src="@drawable/tongyao_you"
        android:scaleType="centerInside"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/viewpager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />
</RelativeLayout>
