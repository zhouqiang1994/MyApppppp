<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vicky.myapp.Activitymusic"
    android:background="@drawable/yinyuebjt">



    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="80dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/yinyuebb"
        android:scaleType="centerInside"
        android:background="#00000000"/>
    <ImageView
        android:layout_marginLeft="50dp"
        android:layout_marginTop="130dp"
        android:layout_width="200dp"
        android:id="@+id/ivWord"
        android:layout_height="wrap_content"
        android:src="@drawable/a_gs_huixiangoushu"
        android:scaleType="centerInside"
        android:background="#00000000"/>
    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:src="@drawable/yinyueqys"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/last"
            android:layout_gravity="center_vertical"
            />

        <ImageButton
            android:src="@drawable/yinyuezt"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/stop"
            android:layout_gravity="center_vertical"
           />

        <ImageButton
            android:src="@drawable/yinyuehys"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/next"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <ImageButton
        android:layout_alignParentLeft="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/fanhui"
        android:src="@drawable/yinyuefh"
        android:scaleType="centerInside"
        android:background="#00000000"/>

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/video"
        android:scaleType="centerInside"
        android:src="@drawable/yinyuemv"
        android:background="#00000000"/>


</RelativeLayout>
