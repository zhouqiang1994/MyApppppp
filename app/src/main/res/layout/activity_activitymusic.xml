<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vicky.myapp.ActivityMusic"
    android:background="@drawable/yinyuebjt">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:src="@drawable/yinyueqys"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/last"
            android:layout_gravity="center_vertical"
            />

        <ImageButton
            android:src="@drawable/yinyuezt"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/stop"
            android:layout_gravity="center_vertical"
           />

        <ImageButton
            android:src="@drawable/yinyuehys"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/next"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/yinyuefh"
        android:scaleType="centerInside"
        android:background="#00000000"/>


</RelativeLayout>
