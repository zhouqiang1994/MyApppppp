<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vicky.myapp.Activityyinwenge"
    android:background="@drawable/yinwengebjt">

    <ImageButton
        android:src="@drawable/yinwenge_fan"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/back_button"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/yinwenge_zuo"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ib_left"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:src="@drawable/yinwenge_you"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ib_right"
        android:layout_alignTop="@+id/ib_left"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v4.view.ViewPager
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/viewpager1">

    </android.support.v4.view.ViewPager>
</RelativeLayout>




